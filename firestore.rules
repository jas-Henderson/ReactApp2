// Allow read-only products for anyone; restrict writes.
// Orders write allowed (unauthenticated) for demo only; tighten for prod.
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /products/{id} {
      allow read: if true;
      allow write: if false; // only via admin/seed endpoint
    }
    match /orders/{id} {
      allow read: if false;
      allow create: if true; // demo only
      allow update, delete: if false;
    }
  }
}